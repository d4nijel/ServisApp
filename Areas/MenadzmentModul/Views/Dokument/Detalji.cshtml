
@{
    ViewData["Title"] = "Dokumenti";
}

@model ServisApp.Areas.MenadzmentModul.ViewModels.DokumentDetaljiVM

@section Scripts {
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"

        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Dokumenti</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Detalji o dokumentu</h3>
                    </div>
                    <form role="form" asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input asp-for="@Model.DokumentId" />
                        <input asp-for="@Model.Naziv" />
                        <input asp-for="@Model.TipDokumenta" />
                        <input asp-for="@Model.DatumIzdavanja" />
                        <input asp-for="@Model.SluzbeniList" />
                        <input asp-for="@Model.Korisnik" />
                        <input asp-for="@Model.DokumentPath" />
                        <div class="card-body">
                            <div class="form-group">
                                <label>Naziv</label>
                                <textarea asp-for="Naziv" rows="3" class="form-control" disabled></textarea>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Tip dokumenta</label>
                                        <input type="text" class="form-control" value="@Model.TipDokumenta" disabled />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Datum izdavanja dokumenta</label>
                                        <input type="text" class="form-control" value="@Model.DatumIzdavanja" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Pravni izvor <a href="http://www.sluzbenilist.ba/" target="_blank"><i class="fa fa-info-circle"></i></a></label>
                                        <input type="text" class="form-control" value="@Model.SluzbeniList" disabled />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Postavio dokument</label>
                                        <input type="text" class="form-control" value="@Model.Korisnik" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input class="custom-control-input" asp-for="DokumentStatus">
                                    <label class="custom-control-label" asp-for="DokumentStatus">Status dokumenta</label>
                                    <span asp-validation-for="DokumentStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Pregled dokumenta</label>
                                <br />
                                <a class="btn btn-app" asp-action="DokumentPDF" asp-route-file="@Model.DokumentPath" target="_blank">
                                    <i class="fas fa-file-pdf"></i>PDF
                                </a>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-outline-primary">Snimi</button>
                                <a class="btn btn-outline-secondary float-right" asp-action="Index">Nazad</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>