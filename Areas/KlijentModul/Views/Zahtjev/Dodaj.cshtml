
@{
    ViewData["Title"] = "Zahtjevi";
}

@model ServisApp.Areas.KlijentModul.ViewModels.ZahtjevDodajVM

@section Scripts {
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"

        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Zahtjevi</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Dodavanje novog zahtjeva</h3>
                    </div>
                    <form role="form" asp-action="Snimi" method="post" class="needs-validation" novalidate>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Naslov">Naslov</label>
                                <input asp-for="Naslov" class="form-control" />
                                <span asp-validation-for="Naslov" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ZahtjevKategorijaId">Kategorija</label>
                                <select asp-for="ZahtjevKategorijaId" asp-items="@Model.ZahtjevKategorija" class="form-control">
                                    <option value="0">(odaberite kategoriju)</option>
                                </select>
                                <span asp-validation-for="ZahtjevKategorijaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Opis">Opis</label>
                                <textarea asp-for="Opis" rows="6" class="form-control"></textarea>
                                <span asp-validation-for="Opis" class="text-danger"></span>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-outline-primary">Snimi</button>
                                <a class="btn btn-outline-secondary float-right" asp-area="" asp-controller="Home" asp-action="Index">Nazad</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>