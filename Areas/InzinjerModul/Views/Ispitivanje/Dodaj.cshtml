
@{
    ViewData["Title"] = "Ispitivanja";
}

@model ServisApp.Areas.InzinjerModul.ViewModels.IspitivanjeDodajVM

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Dodavanje novog ispitivanja</h3>
                    </div>
                    <form role="form" asp-action="Snimi" method="post" ajax-poziv="da" ajax-rezultat="ajaxPoziv" class="needs-validation" novalidate>
                        <input asp-for="@Model.RadniNalogId" value="@Model.RadniNalogId" />
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="NazivIspitivanjaId">Vrsta ispitivanja</label>
                                        <select asp-for="NazivIspitivanjaId" asp-items="@Model.NaziviIspitivanja" class="form-control">
                                            <option value="0">(odaberite vrstu ispitivanja)</option>
                                        </select>
                                        <span asp-validation-for="NazivIspitivanjaId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="DatumIspitivanja">Datum ispitivanja</label>
                                        <div class="input-group date" id="DatumIspitivanjaPicker" data-target-input="nearest">
                                            <input type="text" asp-for="DatumIspitivanja" class="form-control datetimepicker-input" data-target="#DatumIspitivanjaPicker" onkeydown="return false" />
                                            <div class="input-group-append" data-target="#DatumIspitivanjaPicker" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                        </div>
                                        <span asp-validation-for="DatumIspitivanja" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="TipIspitivanja">Tip ispitivanja: </label>
                                        <select asp-for="TipIspitivanja" class="form-control">
                                            <option value="Redovno">Redovno</option>
                                            <option value="Vanredno">Vanredno</option>
                                        </select>
                                        <span asp-validation-for="TipIspitivanja" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Napomena">Napomena</label>
                                <textarea asp-for="Napomena" rows="3" class="form-control"></textarea>
                                <span asp-validation-for="Napomena" class="text-danger"></span>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-outline-primary">Snimi</button>
                                <a class="btn btn-outline-secondary float-right" asp-action="Index" asp-route-id="@Model.RadniNalogId" ajax-poziv="da" ajax-rezultat="ajaxPoziv">Nazad</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>