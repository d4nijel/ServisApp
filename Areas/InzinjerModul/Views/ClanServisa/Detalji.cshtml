
@{
    ViewData["Title"] = "Članovi servisa";
}

@model ServisApp.Areas.InzinjerModul.ViewModels.ClanServisaDetaljiVM

@section scripts
{
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"

        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Članovi servisa</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Uređivanje podataka o članu servisa</h3>
                    </div>
                    <form role="form" asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input asp-for="@Model.ClanServisaId" value="@Model.ClanServisaId" />
                        <input asp-for="@Model.Ime" value="@Model.Ime" />
                        <input asp-for="@Model.Prezime" value="@Model.Prezime" />
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ime</label>
                                <input type="text" class="form-control" value="@Model.Ime" disabled />
                            </div>
                            <div class="form-group">
                                <label>Prezime</label>
                                <input type="text" class="form-control" value="@Model.Prezime" disabled />
                            </div>
                            <div class="form-group">
                                <label asp-for="BrojMobitela">Broj mobitela</label>
                                <input asp-for="BrojMobitela" class="form-control" value="@Model.BrojMobitela" />
                                <span asp-validation-for="BrojMobitela" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Zanimanje">Zanimanje</label>
                                <input asp-for="Zanimanje" class="form-control" value="@Model.Zanimanje" />
                                <span asp-validation-for="Zanimanje" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input class="custom-control-input" asp-for="ClanServisaStatus">
                                    <label class="custom-control-label" asp-for="ClanServisaStatus">Status člana servisa</label>
                                    <span asp-validation-for="ClanServisaStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary">Snimi</button>
                            <a class="btn btn-outline-secondary float-right" asp-action="Index">Nazad</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>