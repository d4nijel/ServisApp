
@{
    ViewData["Title"] = "Usluge";
}

@model ServisApp.Areas.AdministratorModul.ViewModels.NazivIspitivanjaDodajVM

@section scripts
{
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"

        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Usluge</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Uređivanje podataka o usluzi</h3>
                    </div>
                    <form role="form" asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input asp-for="@Model.NazivIspitivanjaId" value="@Model.NazivIspitivanjaId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Naziv">Naziv</label>
                                <input asp-for="Naziv" class="form-control" value="@Model.Naziv" />
                                <span asp-validation-for="Naziv" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Oznaka">Oznaka</label>
                                <input asp-for="Oznaka" class="form-control" value="@Model.Oznaka" />
                                <span asp-validation-for="Oznaka" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PeriodVazenja">Period važenja usluge (mjeseci)</label>
                                <input asp-for="PeriodVazenja" class="form-control" value="@Model.PeriodVazenja" />
                                <span asp-validation-for="PeriodVazenja" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input class="custom-control-input" asp-for="NazivIspitivanjaStatus">
                                    <label class="custom-control-label" asp-for="NazivIspitivanjaStatus">Status usluge</label>
                                    <span asp-validation-for="NazivIspitivanjaStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-primary">Snimi</button>
                            <a class="btn btn-outline-secondary float-right" asp-action="Index">Nazad</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>