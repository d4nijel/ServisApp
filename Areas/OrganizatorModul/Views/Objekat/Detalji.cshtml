
@{
    ViewData["Title"] = "Objekti";
}

@model ServisApp.Areas.OrganizatorModul.ViewModels.ObjekatUrediVM

@section Scripts {
    <script>
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"

        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Objekti</h1>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">Detalji o objektu</h3>
                    </div>
                    <form role="form" asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input asp-for="@Model.ObjekatId" />
                        <input asp-for="@Model.Naziv" />
                        <input asp-for="@Model.NazivKlijenta" />
                        <input asp-for="@Model.NazivMjesta" />
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Naziv</label>
                                        <input type="text" class="form-control" value="@Model.Naziv" disabled />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="Ulica">Ulica</label>
                                        <input asp-for="Ulica" class="form-control" />
                                        <span asp-validation-for="Ulica" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="KontaktOsoba">Kontakt osoba</label>
                                        <input asp-for="KontaktOsoba" class="form-control" />
                                        <span asp-validation-for="KontaktOsoba" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Klijent</label>
                                        <input type="text" class="form-control" value="@Model.NazivKlijenta" disabled />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Lokacija</label>
                                        <input type="text" class="form-control" value="@Model.NazivMjesta" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="KontaktBrojFiksni">Fiksni telefon</label>
                                        <input asp-for="KontaktBrojFiksni" class="form-control" />
                                        <span asp-validation-for="KontaktBrojFiksni" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="KontaktBrojMobitel">Mobitel</label>
                                        <input asp-for="KontaktBrojMobitel" class="form-control" />
                                        <span asp-validation-for="KontaktBrojMobitel" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="KontaktEmail">Email</label>
                                        <input asp-for="KontaktEmail" class="form-control" />
                                        <span asp-validation-for="KontaktEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input class="custom-control-input" asp-for="ObjekatStatus">
                                    <label class="custom-control-label" asp-for="ObjekatStatus">Status objekta</label>
                                    <span asp-validation-for="ObjekatStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-outline-primary">Snimi</button>
                                <a class="btn btn-outline-secondary float-right" asp-action="Index">Nazad</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>